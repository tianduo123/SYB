<!--pages/slqj_detail/slqj_detail.wxml-->
<video style='width:100%;height:400rpx' src='{{info.video}}' poster='{{imgUrl+info.image}}' object-fit='cover' enable-play-gesture='true' ></video>
<view class='menu'>
  <view class='browser'>
    <image src='../../icon/zuji.png' style='width:50rpx;height:50rpx'></image>
    <view>{{info.browser}}人浏览</view>
  </view>
  <view class='like' style='border-left:1px solid #eee;border-right:1px solid #eee'>
    <image src='{{iszan?"../../icon/zan2.png":"../../icon/zan.png"}}' style='width:50rpx;height:50rpx;' bindtap='zan'></image>
    <view>{{zan}}人点赞</view>
  </view>
  <button class='share' hover-class='hover' open-type='share'>
    <image src='../../icon/share.png' style='width:30rpx;height:30rpx'></image>
    <view>分享</view>
  </button>
</view>
<view class='line'></view>
<view class='comment_wrap'>
  <view class='title'>评论({{num}})</view>
  <view class='item' wx:for='{{commentList}}' wx:key>
    <view class='userInfo'>
      <image src='{{item.headimgurl}}' style='width:50rpx;height:50rpx;border-radius:50%'></image>
      <view style='margin-left:30rpx;color:#000000'>{{item.nickname}}</view>
    </view>
    <view class='content'>{{item.content}}</view>
  </view>
</view>
<view class='bottom'>
  <input placeholder='我要评论' class='inp' bindinput='getVal' value='{{val}}'></input>
  <view class='comment' bindtap='comment'>评论</view>
</view>