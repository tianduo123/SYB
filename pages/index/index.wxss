/* pages/index/index.wxss */
page{
  background: #eee;
  padding-bottom: 30rpx
}
button::after{
  border: none;
}
button{
  border-radius: 0
}
.newP{
  width: 100%;
  height: 60rpx;
  background: #FF9933;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff
}
.banner {
  width: 100%;
  height: 360rpx;
}
.banner2{
  width: 400rpx;
  height: 150rpx;
  background: #FF9933;
  border-radius: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 10rpx
}
.ban_item{
  display: flex;
  justify-content: space-around;
  align-items: center
}

.ban_info{
  width: 40%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around
}
.info_name{
  font-size: 28rpx;
  color: #fff;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.info_num{
  font-size: 26rpx;
}
.info_btn{
  font-size: 24rpx;
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #CC0000;
  border-radius: 10rpx;
  text-align: center;
  color: #fff
}
.icon {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  font-size: 24rpx;
  color: #666;
  margin-top: 50rpx;
}

.icon_img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}

.first{
  width: 90%;
  height: 150rpx;
  border-radius: 10rpx ;
  margin: 20rpx auto 0rpx;
  display: flex;
  align-items: center;
  justify-content: space-between
}
.first_l{
  width:250rpx;
  height:150rpx;
  border-radius:10rpx;
  overflow:hidden;
  box-shadow:10rpx 10rpx 5rpx #ccc;
  background: #ffd6e7;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 28rpx
}
.second{
  width: 90%;
  height: 200rpx;
  border-radius: 10rpx;
  margin: 25rpx auto 40rpx;
  background: #fff;
  box-shadow: 10rpx 10rpx 5rpx #ccc
}
.third{
  width: 90%;
  height: 400rpx;
  border-radius: 10rpx;
  margin: 30rpx auto;
  background: #fff;
  box-shadow: 10rpx 10rpx 5rpx #ccc;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center
}
.title{
  font-size: 28rpx;
  /* color: #660099; */
  height: 50rpx;
  display: flex;
  align-items: center;
  margin-left: 20rpx
}
.wrap{
  width: 95%;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: space-around
}
.more{
  width: 5%;
  /* display: inline-block */
}
.wrap2{
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  font-size: 28rpx;
  color: #666
}
.item{
  width: 130rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  align-items: center;
  justify-content: space-around;
  position: relative
}

.item>image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%
}
.hasP{
  position: absolute;
  top: 0rpx;
  right: 10rpx
}
.name{
  width: 130rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 26rpx;
  text-align: center

}
.third_top{
  width: 90%;
  display: flex;
  align-items: center;
  justify-content: space-around
}
.third_l{
  width:48%;
  height:180rpx;
  background: #ffdeff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-radius:10rpx;
}
.third_r{
  width:48%;
  height:180rpx;
  background: #efdeff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-radius:10rpx;
}
.third_bot{
  width: 90%
}
.empty{
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 28rpx;
  color: #fff
}