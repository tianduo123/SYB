/* pages/video_list/video_list.wxss */

.title{
  font-size: 32rpx;
  color: #FF0000;
  font-weight: bold;
  margin: 20rpx 20rpx
}
.item{
  width: 100%;
  height: 200rpx;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
}
.left{
  width: 300rpx;
  height: 160rpx;
}
.right{
  height: 160rpx;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  justify-content: space-between
}
.right_bot{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999
}