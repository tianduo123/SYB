/* pages/everyday/everyday.wxss */
page{
  box-sizing: border-box;
  padding-bottom: 120rpx;
  padding-top: 80rpx
}
.video{
  width: 100%;
  height: 420rpx
}
.title{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  font-size: 26rpx
}
.title2{
  width: 100%;
  text-align: right;
  box-sizing: border-box;
  padding-right: 30rpx;
  font-size: 26rpx;
  color: #666
}
.title3{
  font-size: 28rpx;
  margin: 15rpx 0 15rpx 20rpx;
  font-weight: bold
}
.line{
  width: 100%;
  height: 20rpx;
  background: #eeeeee
}

.btn{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #eeeeee
}
.btn_item{
  width: 33.33%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 24rpx;
  color: #999999
}
.z{
  display: flex;
  align-items: center
}
.top{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 2
}
.gg{
  width: 90%;
  height: 50rpx;
  border-radius: 50rpx;
  background: linear-gradient(to right, #edf1f4, #daf6f9);
  display: flex;
  align-items: center
}
.img{
  margin-left: 30rpx;
  width: 40rpx;
  height: 40rpx
}
.gg_content{
  font-size: 26rpx;
  margin-left: 30rpx
}